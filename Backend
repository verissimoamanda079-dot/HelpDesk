import React, { useState, useEffect } from 'react';
import { AlertCircle, CheckCircle, Clock, Zap } from 'lucide-react';

// Simula√ß√£o do backend - Em produ√ß√£o, isso seria uma API real
class TicketService {
  constructor() {
    this.tickets = [];
    this.nextId = 1;
  }

  createTicket(titulo, descricao, tipoCliente) {
    const ticket = {
      id: this.nextId++,
      titulo,
      descricao,
      tipo_cliente: tipoCliente,
      status: 'PENDENTE',
      urgencia_calculada: null,
      created_at: new Date().toISOString()
    };
    this.tickets.push(ticket);
    return ticket;
  }

  getTicketsByStatus(status) {
    return this.tickets.filter(t => t.status === status);
  }

  processarFila() {
    const pendentes = this.getTicketsByStatus('PENDENTE');
    
    pendentes.forEach(ticket => {
      ticket.urgencia_calculada = this.calcularUrgencia(ticket);
      ticket.status = 'CLASSIFICADO';
    });

    return pendentes.length;
  }

  calcularUrgencia(ticket) {
    const descricaoLower = ticket.descricao.toLowerCase();
    
    // Palavras-chave por n√≠vel de impacto
    const palavrasCriticas = ['parado', 'offline', 'n√£o funciona', 'down', 'fora do ar'];
    const palavrasAltas = ['erro', 'bug', 'lento', 'lentid√£o', 'falha de acesso'];
    const palavrasMedias = ['d√∫vida', 'como fazer', 'ajuda', 'orienta√ß√£o'];

    // Detectar o maior impacto presente na descri√ß√£o
    let nivelImpacto = 'NENHUM';
    
    if (palavrasCriticas.some(palavra => descricaoLower.includes(palavra))) {
      nivelImpacto = 'CRITICO';
    } else if (palavrasAltas.some(palavra => descricaoLower.includes(palavra))) {
      nivelImpacto = 'ALTO';
    } else if (palavrasMedias.some(palavra => descricaoLower.includes(palavra))) {
      nivelImpacto = 'MEDIO';
    }

    // Aplicar matriz de decis√£o
    const tipo = ticket.tipo_cliente;

    if (tipo === 'PREMIUM') {
      if (nivelImpacto === 'CRITICO') return 'CRITICA';
      if (nivelImpacto === 'ALTO') return 'ALTA';
      return 'MEDIA';
    }

    if (tipo === 'BASICO') {
      if (nivelImpacto === 'CRITICO') return 'ALTA';
      if (nivelImpacto === 'ALTO') return 'MEDIA';
      return 'BAIXA';
    }

    if (tipo === 'GRATUITO') {
      if (nivelImpacto === 'CRITICO') return 'MEDIA';
      return 'BAIXA';
    }

    return 'BAIXA';
  }

  getAllTickets() {
    return this.tickets;
  }
}

const ticketService = new TicketService();

export default function GestorPrioridade() {
  const [titulo, setTitulo] = useState('');
  const [descricao, setDescricao] = useState('');
  const [tipoCliente, setTipoCliente] = useState('BASICO');
  const [ticketsPendentes, setTicketsPendentes] = useState([]);
  const [ticketsClassificados, setTicketsClassificados] = useState([]);
  const [mensagem, setMensagem] = useState(null);

  const atualizarListas = () => {
    setTicketsPendentes(ticketService.getTicketsByStatus('PENDENTE'));
    setTicketsClassificados(ticketService.getTicketsByStatus('CLASSIFICADO'));
  };

  useEffect(() => {
    atualizarListas();
  }, []);

  const handleCriarTicket = (e) => {
    e.preventDefault();
    
    if (!titulo.trim() || !descricao.trim()) {
      setMensagem({ tipo: 'erro', texto: 'T√≠tulo e descri√ß√£o s√£o obrigat√≥rios!' });
      return;
    }

    try {
      ticketService.createTicket(titulo, descricao, tipoCliente);
      setMensagem({ tipo: 'sucesso', texto: 'Ticket criado com sucesso!' });
      setTitulo('');
      setDescricao('');
      atualizarListas();
      
      setTimeout(() => setMensagem(null), 3000);
    } catch (error) {
      setMensagem({ tipo: 'erro', texto: 'Erro ao criar ticket. Tente novamente.' });
    }
  };

  const handleProcessarFila = () => {
    try {
      const processados = ticketService.processarFila();
      
      if (processados === 0) {
        setMensagem({ tipo: 'info', texto: 'Nenhum ticket pendente para processar.' });
      } else {
        setMensagem({ 
          tipo: 'sucesso', 
          texto: `${processados} ticket(s) processado(s) com sucesso!` 
        });
      }
      
      atualizarListas();
      setTimeout(() => setMensagem(null), 3000);
    } catch (error) {
      setMensagem({ tipo: 'erro', texto: 'Erro ao processar fila. Tente novamente.' });
    }
  };

  const getUrgenciaColor = (urgencia) => {
    const cores = {
      'CRITICA': 'bg-red-100 text-red-800 border-red-300',
      'ALTA': 'bg-orange-100 text-orange-800 border-orange-300',
      'MEDIA': 'bg-yellow-100 text-yellow-800 border-yellow-300',
      'BAIXA': 'bg-green-100 text-green-800 border-green-300'
    };
    return cores[urgencia] || 'bg-gray-100 text-gray-800 border-gray-300';
  };

  const getUrgenciaIcon = (urgencia) => {
    if (urgencia === 'CRITICA') return <AlertCircle className="w-4 h-4" />;
    if (urgencia === 'ALTA') return <Zap className="w-4 h-4" />;
    return <Clock className="w-4 h-4" />;
  };

  return (
    <div className="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 p-6">
      <div className="max-w-7xl mx-auto">
        {/* Header */}
        <div className="text-center mb-8">
          <h1 className="text-4xl font-bold text-gray-800 mb-2">
            Gestor de Prioridade
          </h1>
          <p className="text-gray-600">Sistema de HelpDesk - Triagem de Tickets</p>
        </div>

        {/* Mensagens de Feedback */}
        {mensagem && (
          <div className={`mb-6 p-4 rounded-lg border-2 ${
            mensagem.tipo === 'sucesso' ? 'bg-green-50 border-green-300 text-green-800' :
            mensagem.tipo === 'erro' ? 'bg-red-50 border-red-300 text-red-800' :
            'bg-blue-50 border-blue-300 text-blue-800'
          } flex items-center gap-2 animate-pulse`}>
            {mensagem.tipo === 'sucesso' && <CheckCircle className="w-5 h-5" />}
            {mensagem.tipo === 'erro' && <AlertCircle className="w-5 h-5" />}
            <span className="font-medium">{mensagem.texto}</span>
          </div>
        )}

        {/* Formul√°rio de Cria√ß√£o */}
        <div className="bg-white rounded-lg shadow-lg p-6 mb-6">
          <h2 className="text-2xl font-bold text-gray-800 mb-4 flex items-center gap-2">
            <span className="text-blue-600">+</span> Novo Ticket
          </h2>
          
          <form onSubmit={handleCriarTicket} className="space-y-4">
            <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label className="block text-sm font-semibold text-gray-700 mb-2">
                  T√≠tulo *
                </label>
                <input
                  type="text"
                  value={titulo}
                  onChange={(e) => setTitulo(e.target.value)}
                  className="w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:border-blue-500 focus:outline-none"
                  placeholder="Ex: Sistema n√£o carrega"
                />
              </div>

              <div>
                <label className="block text-sm font-semibold text-gray-700 mb-2">
                  Tipo de Cliente *
                </label>
                <select
                  value={tipoCliente}
                  onChange={(e) => setTipoCliente(e.target.value)}
                  className="w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:border-blue-500 focus:outline-none"
                >
                  <option value="GRATUITO">Gratuito</option>
                  <option value="BASICO">B√°sico</option>
                  <option value="PREMIUM">Premium</option>
                </select>
              </div>
            </div>

            <div>
              <label className="block text-sm font-semibold text-gray-700 mb-2">
                Descri√ß√£o *
              </label>
              <textarea
                value={descricao}
                onChange={(e) => setDescricao(e.target.value)}
                rows="3"
                className="w-full px-4 py-2 border-2 border-gray-300 rounded-lg focus:border-blue-500 focus:outline-none resize-none"
                placeholder="Descreva o problema detalhadamente..."
              />
            </div>

            <button
              type="submit"
              className="w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 rounded-lg transition duration-200 shadow-md hover:shadow-lg"
            >
              Criar Ticket
            </button>
          </form>
        </div>

        {/* Bot√£o de Processar */}
        <div className="mb-6 text-center">
          <button
            onClick={handleProcessarFila}
            disabled={ticketsPendentes.length === 0}
            className="bg-gradient-to-r from-purple-600 to-indigo-600 hover:from-purple-700 hover:to-indigo-700 disabled:from-gray-400 disabled:to-gray-500 text-white font-bold py-4 px-8 rounded-lg transition duration-200 shadow-lg hover:shadow-xl disabled:cursor-not-allowed"
          >
            üöÄ Processar Fila Pendente ({ticketsPendentes.length})
          </button>
        </div>

        {/* Filas */}
        <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
          {/* Fila Pendente */}
          <div className="bg-white rounded-lg shadow-lg p-6">
            <h2 className="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
              <Clock className="w-6 h-6 text-orange-500" />
              Fila Pendente ({ticketsPendentes.length})
            </h2>
            
            <div className="space-y-3 max-h-96 overflow-y-auto">
              {ticketsPendentes.length === 0 ? (
                <p className="text-gray-500 text-center py-8">
                  Nenhum ticket pendente
                </p>
              ) : (
                ticketsPendentes.map(ticket => (
                  <div key={ticket.id} className="border-2 border-gray-200 rounded-lg p-4 hover:border-blue-300 transition">
                    <div className="flex justify-between items-start mb-2">
                      <h3 className="font-bold text-gray-800">#{ticket.id} - {ticket.titulo}</h3>
                      <span className="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded font-semibold">
                        {ticket.tipo_cliente}
                      </span>
                    </div>
                    <p className="text-sm text-gray-600">{ticket.descricao}</p>
                  </div>
                ))
              )}
            </div>
          </div>

          {/* Fila Classificada */}
          <div className="bg-white rounded-lg shadow-lg p-6">
            <h2 className="text-xl font-bold text-gray-800 mb-4 flex items-center gap-2">
              <CheckCircle className="w-6 h-6 text-green-500" />
              Fila Classificada ({ticketsClassificados.length})
            </h2>
            
            <div className="space-y-3 max-h-96 overflow-y-auto">
              {ticketsClassificados.length === 0 ? (
                <p className="text-gray-500 text-center py-8">
                  Nenhum ticket classificado
                </p>
              ) : (
                ticketsClassificados.map(ticket => (
                  <div key={ticket.id} className="border-2 border-gray-200 rounded-lg p-4 hover:border-green-300 transition">
                    <div className="flex justify-between items-start mb-2">
                      <h3 className="font-bold text-gray-800">#{ticket.id} - {ticket.titulo}</h3>
                      <div className="flex gap-2">
                        <span className="text-xs bg-blue-100 text-blue-800 px-2 py-1 rounded font-semibold">
                          {ticket.tipo_cliente}
                        </span>
                        <span className={`text-xs px-2 py-1 rounded font-semibold border-2 flex items-center gap-1 ${getUrgenciaColor(ticket.urgencia_calculada)}`}>
                          {getUrgenciaIcon(ticket.urgencia_calculada)}
                          {ticket.urgencia_calculada}
                        </span>
                      </div>
                    </div>
                    <p className="text-sm text-gray-600">{ticket.descricao}</p>
                  </div>
                ))
              )}
            </div>
          </div>
        </div>

        {/* Footer */}
        <div className="mt-8 text-center text-gray-600 text-sm">
          <p>Sistema de Triagem de Tickets - Gestor de Prioridade v1.0</p>
        </div>
      </div>
    </div>
  );
}
